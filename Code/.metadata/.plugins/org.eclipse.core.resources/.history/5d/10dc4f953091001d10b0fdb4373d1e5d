#ifndef SRC_I2C_H_
#define SRC_I2C_H_

#include "main.h"

typedef uint8_t I2C_ADDR;

class I2C {
protected:
	I2C_HandleTypeDef mI2C;
private:
	uint8_t mBuffer[16];

public:
	I2C();
	virtual ~I2C();

	uint8_t readByte( I2C_ADDR addr );
	bool writeByte( I2C_ADDR addr, uint8_t );
};

#endif /* SRC_I2C_H_ */
