#ifndef SRC_LED_H_
#define SRC_LED_H_

class LED {
protected:
	int mGroup;
	int mPin;
public:
	LED();
	LED( int group, int pin );
	virtual ~LED();

	void setPin( int pin ) { mPin = pin; }
	void setGroup( int group ) { mGroup = group; }

	virtual void enable() { setState( true ); }
	virtual void disable() { setState( false ); }
	virtual void setState( bool enable );
};

#endif /* SRC_LED_H_ */
