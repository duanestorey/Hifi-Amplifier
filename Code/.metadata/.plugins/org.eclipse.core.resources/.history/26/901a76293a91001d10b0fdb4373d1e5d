void
DAC_PCM1681::muteChannel( int channel, bool enable ) {
	uint8_t mask =  ( 1 << ( channel ) );
	if ( enable ) {
		// enable the bit representing this channel
		mMuteStatus = mMuteStatus & mask;
	} else {
		// disable the bit representing the channel
		mMuteStatus = mMuteStatus & ~mask;
	}

	//mDevice->writeByte( )
}

