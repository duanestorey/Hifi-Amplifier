#ifndef SRC_LED_H_
#define SRC_LED_H_

class LED {
protected:
	GPIO_TypeDef* mPort;
	GPIO_TypeDef* mPin;
	int mCurrentState;
public:
	LED();
	LED( int port, int pin );
	virtual ~LED();

	void setPin( int pin ) { mPin = pin; }
	void setPort( int port ) { mPort = port; }

	virtual void enable() { setState( true ); }
	virtual void disable() { setState( false ); }
	virtual void setState( bool enable );
};

#endif /* SRC_LED_H_ */
